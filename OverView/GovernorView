<body>

    <div class="container">
        <h1 class="title">استانداران جمهوری اسلامی ایران 🇮🇷</h1>
        <div id="governors-list" class="cards-grid">
        </div>
        <div id="loading" class="loading-message">
            <p>درحال فراخوانی داده‌ها...</p>
        </div>
        <div id="error" class="error-message" style="display:none;"></div>
    </div>

    <div id="main-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal('main-modal')">&times;</span>
            
            <div class="modal-header">
                <img id="modal-governor-image" src="" alt="تصویر استاندار" class="modal-governor-image">
                <div class="modal-info">
                    <h2 id="modal-governor-name"></h2>
                    <p id="modal-province-name"></p>
                </div>
            </div>
            
            <div class="modal-buttons">
                <button id="profile-btn" class="modal-button profile-btn" onclick="openProfileModal(this.getAttribute('data-profile-content'), this.getAttribute('data-governor-name'), this.getAttribute('data-province-name'), this.getAttribute('data-image-url'))">
                    <i class="fas fa-id-card"></i> پروفایل استاندارد
                </button>
                
                <a id="meetings-link" href="#" target="_blank" class="modal-button link-btn"><i class="fas fa-handshake"></i> جلسات و دیدارها</a>
                <a id="positions-link" href="#" target="_blank" class="modal-button link-btn"><i class="fas fa-bullhorn"></i> مواضع و مصاحبه‌ها</a>
                <a id="performance-link" href="#" target="_blank" class="modal-button link-btn"><i class="fas fa-city"></i> عملکرد بنیاد در استان</a>
                <a id="analysis-link" href="#" target="_blank" class="modal-button link-btn"><i class="fas fa-chart-line"></i> تحلیل و ارزیابی</a>
            </div>
        </div>
    </div>

    <div id="profile-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal('profile-modal')">&times;</span>
            
            <div class="modal-header-profile">
                <img id="profile-image-small" src="" alt="تصویر استاندار" class="profile-image-small">
                <div class="profile-info-text">
                    <h3 id="profile-governor-name"></h3>
                    <p id="profile-province-name"></p>
                </div>
            </div>

            <div id="profile-content"></div>
        </div>
    </div>

    <script>
        // *** مهم: لینک زیر را با آدرس Web App ای که از Apps Script دریافت کردید جایگزین کنید ***
        const API_URL = 'https://script.google.com/macros/s/AKfycbzJUZhSVRYBashS033znprq8RMLf3kRq7WwipwYAXblwJ4R1MetQdwEL3XqjCdwAys/exec';
        
        const listContainer = document.getElementById('governors-list');
        const loadingElement = document.getElementById('loading');
        const errorElement = document.getElementById('error');

        // توابع Modal
        function openModal(item) {
            const mainModal = document.getElementById('main-modal');
            const profileBtn = document.getElementById('profile-btn');
            
            // پر کردن اطلاعات هدر پاپ‌آپ اصلی
            document.getElementById('modal-governor-image').src = item.image_url;
            document.getElementById('modal-governor-name').textContent = item.governor_name;
            document.getElementById('modal-province-name').textContent = 'استان: ' + item.province;
            
            // **تنظیم تمام داده‌های مورد نیاز برای پاپ‌آپ دوم (پروفایل) روی دکمه پروفایل**
            profileBtn.setAttribute('data-profile-content', item.profile_content || 'محتوایی برای نمایش یافت نشد.');
            profileBtn.setAttribute('data-governor-name', item.governor_name);
            profileBtn.setAttribute('data-province-name', item.province);
            profileBtn.setAttribute('data-image-url', item.image_url);
            
            // تنظیم لینک‌ها (اگر لینک موجود باشد، دکمه فعال و قابل کلیک است، در غیر این صورت غیرفعال می‌شود)
            const links = [
                { id: 'meetings-link', link: item.meetings_link }, // H
                { id: 'positions-link', link: item.positions_link }, // G
                { id: 'performance-link', link: item.performance_link }, // I
                { id: 'analysis-link', link: item.analysis_link } // J
            ];

            links.forEach(linkInfo => {
                const element = document.getElementById(linkInfo.id);
                if (linkInfo.link && String(linkInfo.link).trim().startsWith('http')) {
                    element.href = linkInfo.link;
                    element.style.pointerEvents = 'auto';
                    element.style.opacity = '1';
                    element.target = '_blank';
                } else {
                    element.href = '#';
                    element.style.pointerEvents = 'none';
                    element.style.opacity = '0.6';
                    element.target = '_self';
                }
            });

            // نمایش پاپ‌آپ اصلی
            mainModal.style.display = 'block';
        }

        // تابع باز کردن پاپ‌آپ محتوای پروفایل (ستون F)
        function openProfileModal(content, governorName, provinceName, imageUrl) {
            const profileModal = document.getElementById('profile-modal');
            const mainModal = document.getElementById('main-modal');

            // مخفی کردن پاپ‌آپ اصلی
            mainModal.style.display = 'none';

            // **تنظیم هدر پاپ‌آپ پروفایل با اطلاعات استاندار**
            document.getElementById('profile-image-small').src = imageUrl || 'https://via.placeholder.com/70/CCCCCC/FFFFFF?text=خطا';
            document.getElementById('profile-governor-name').textContent = governorName;
            document.getElementById('profile-province-name').textContent = 'استان: ' + provinceName;


            // پر کردن محتوای پروفایل
            document.getElementById('profile-content').textContent = content;

            // نمایش پاپ‌آپ پروفایل
            profileModal.style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        // بستن Modal با کلیک خارج از آن
        window.onclick = function(event) {
            if (event.target == document.getElementById('main-modal')) {
                closeModal('main-modal');
            }
            if (event.target == document.getElementById('profile-modal')) {
                closeModal('profile-modal');
                // اگر پاپ‌آپ پروفایل بسته شد، می‌توانیم پاپ‌آپ اصلی را دوباره نمایش دهیم (اختیاری)
                // document.getElementById('main-modal').style.display = 'block';
            }
        }

        async function fetchGovernorData() {
            loadingElement.style.display = 'block';
            listContainer.innerHTML = '';
            errorElement.style.display = 'none';

            try {
                const response = await fetch(API_URL);
                if (!response.ok) {
                    throw new Error(`خطای شبکه: ${response.status}`);
                }
                
                const data = await response.json();

                if (data.error) {
                    throw new Error(`خطای سمت سرور (Apps Script): ${data.error}`);
                }

                if (data.length === 0) {
                    listContainer.innerHTML = '<div class="loading-message">داده‌ای در شیت یافت نشد.</div>';
                    return;
                }

                data.forEach(item => {
                    const card = document.createElement('div');
                    card.className = 'card';
                    card.onclick = () => openModal(item);

                    const img = document.createElement('img');
                    img.src = item.image_url || 'https://via.placeholder.com/90/CCCCCC/FFFFFF?text=No+Img';
                    img.alt = `تصویر ${item.governor_name}`;
                    img.className = 'governor-image';
                    img.onerror = function() {
                        this.src = 'https://via.placeholder.com/90/CCCCCC/FFFFFF?text=خطا';
                    };

                    const provinceP = document.createElement('p');
                    provinceP.className = 'province-name';
                    provinceP.textContent = item.province;

                    const governorH = document.createElement('h3');
                    governorH.className = 'governor-name';
                    governorH.textContent = item.governor_name;

                    card.appendChild(img);
                    card.appendChild(provinceP);
                    card.appendChild(governorH);
                    listContainer.appendChild(card);
                });

            } catch (error) {
                console.error("Fetch Error:", error);
                errorElement.textContent = `متاسفانه در دریافت داده‌ها خطایی رخ داد: ${error.message}`;
                errorElement.style.display = 'block';
            } finally {
                loadingElement.style.display = 'none';
            }
        }

        // فراخوانی تابع برای بارگذاری داده‌ها پس از آماده شدن صفحه
        fetchGovernorData();
    </script>

</body>
</html>
